{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "esnext",
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "README.md"
  ]
}
